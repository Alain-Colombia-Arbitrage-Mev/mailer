# Force npm to use the native bindings correctly
prefer-offline=false
audit=false
fund=false

# Resolve native binding issues
optional=false
# Explicitly ignore oxc-parser related packages
ignore-engines=true
# Force legacy peer deps resolution
legacy-peer-deps=true
# Skip optional dependencies completely
install-optional=false
# Configure for build environment
production=false
# Disable scripts that might trigger native compilation
ignore-scripts=true
# Force npm to skip problematic packages
package-lock=false
progress=false